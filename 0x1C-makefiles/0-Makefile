# Variable definitions
CC = gcc
CFLAGS = -Wall -Werror
LDFLAGS =

# Rule: target dependencies
#     command

# Default rule
all: main

# Rule to build the main target
main: main.o utility.o
    $(CC) $(LDFLAGS) -o main main.o utility.o

# Rule to build the main.o object file
main.o: main.c utility.h
    $(CC) $(CFLAGS) -c main.c

# Rule to build the utility.o object file
utility.o: utility.c utility.h
    $(CC) $(CFLAGS) -c utility.c

# Clean rule
clean:
    rm -f main main.o utility.o
